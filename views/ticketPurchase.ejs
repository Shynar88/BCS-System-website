<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Pacifico">
    <link href="jquery/css/ui-lightness/jquery-ui-1.10.0.custom.css" rel="stylesheet" type="text/html" />
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css">
    <link href="./websi.css" rel="stylesheet" >    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.3.1/dist/semantic.min.css">
    
  </head>
  <body>
    <div id="wrapper" style="width: 1020px; margin-left: 125px;">
    <div class="ui top fixed borderless menu" id="menu">
      <div class="item" id="space" style="width:111px;"></div>
      <a class="item">
        <!-- <img style="height: 50px; width: 60px;" src="logo.png"> -->
        <span id="logo" onclick="window.location = 'index.html'">BCS-Cinema</span>
      </a>
      <div class="item" id="srchbar">
        <div class="ui search">
          <div class="ui icon input">
            <input id="srch" class="prompt" type="text" placeholder="Search movie by name...">
            <i class="search icon"></i>
          </div>
        </div>
    </div>        
    </div>

    <h1>Online Ticket Purchase</h1>
    
    <div id="container">
        <div class="left">
            <table id="myChair">        
                </table>
                <br></br>
                <div id="screen">            
                </div>
        </div>
        <form method = "POST" action = "/ticketBuy"></form>
            <div class="right">
                <h3>
                  Details
                </h3>
                <div>
                  Time:
                  <label>
                    <input id="time" placeholder="time" name="time">            
                  </label>
                  <br></br>
                  Hall:
                  <label>
                    <input id="hall" placeholder="hall" name="hall">            
                  </label>
                  <br></br>
                  Movie Name:
                  <label>
                    <input id="movie" placeholder="movie" name="movie">            
                  </label>
                  <br></br>
                  Seat:
                  <label>
                    <input id="seat" placeholder="seat" name="seat">            
                  </label>
                  <!-- need userId for form too!!  -->
                  <br></br>
                    <div class="ui menu">                
                      <a class="item">
                        <i class="cart icon"></i>
                        Total Price
                      </a>
                        <div class ="length">
                        
                          <label></label>
                          <input id="price" placeholder="Price" name="Price">
                        
                        </div>
                    </div>
                    <div><button class="ui teal submit button" data-title="Do you want to submit now?" >Submit</button></div>
                
            </div>
        </form>
    </div>
    
    <div class="ui login container">
        <div class="ui login modal form segment">
          <i class ="login close icon"></i>
  
        <p>Please, log in.</p>
        
        <div class="field">
          <label>Username</label>
          <input placeholder="Username" name="username" type="text">
        </div>
        <div class="field">
          <label>Password</label>
          <input placeholder="Password" type="password" name="password">
        </div>
        <a id = "signUp" style="cursor: pointer;">Don't have an account?</a><br><br>
          
      <div class = "ui green login submit basic button">Login</div>
      <div class = "ui red login cancel basic button">Cancel</div>          
      <div class="ui login error message"></div>
      
    

    

    <script src="jquery/js/jquery-1.9.0.min.js"></script>
    <script src="jquery/js/jquery-ui-1.10.0.custom.min.js"></script>
    <script src="https://www.gstatic.com/firebasejs/3.6.2/firebase.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>
    <script src="./chair.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.3.1/dist/semantic.min.js"></script>
  </body>
</html>